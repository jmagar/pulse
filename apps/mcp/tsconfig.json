{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*.ts",
    "server/**/*",
    "tools/**/*",
    "scraping/**/*",
    "processing/**/*",
    "storage/**/*",
    "config/**/*",
    "utils/**/*",
    "monitoring/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
