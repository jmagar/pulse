# ============================================================================
# MCP Server Standalone Environment Variables
# ============================================================================
# Copy to apps/mcp/.env and customize values when running the MCP server
# outside the docker-compose stack.
# ============================================================================

# Server configuration
MCP_PORT=3060
MCP_DEBUG=false

# Firecrawl integration
MCP_FIRECRAWL_API_KEY=self-hosted-no-auth
MCP_FIRECRAWL_BASE_URL=http://localhost:3002

# Webhook Service (for query tool)
MCP_WEBHOOK_BASE_URL=http://localhost:50108
MCP_WEBHOOK_API_SECRET=your-webhook-api-secret-here
