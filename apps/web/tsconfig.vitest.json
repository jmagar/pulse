{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "@testing-library/jest-dom"
    ],
    "noEmit": true
  },
  "include": [
    "vitest.setup.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ]
}
