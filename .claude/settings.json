{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch",
      "WebSearch",
      "SlashCommand",
      "NotebookEdit",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "TodoRead",
      "BashOutput",
      "KillShell",
      "Skill",
      "AskUserQuestion",
      "ExitPlanMode"
    ],
    "ask": [],
    "deny": []
  },

  "enableAllProjectMcpServers": true,

  "model": "sonnet",

  "includeCoAuthoredBy": true,

  "cleanupPeriodDays": 30,

  "env": {
    "CLAUDE_CODE_DISABLE_SANDBOX": "1"
  }
}
